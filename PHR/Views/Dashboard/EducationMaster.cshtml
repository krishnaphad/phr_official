@using PHR.ViewModels.Dashboard
@model PHR.Services.CommonFunctions.PagedList<EducationMasterViewModel>
@{
    ViewData["Title"] = "Education Master";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<button id="educationMasterAddBtn" class="btn btn-primary mb-3" type="button"><i class="fa fa-plus"></i>Add New Degree</button>

<div class="row justify-content-center">
    <div class="col-lg-4 col-md-12">
        <form id="educationMasterForm">

            <div class="form-outline mb-4">
                <label class="form-label" for="educationName">Degree Name</label>
                <input type="text" id="educationName" class="form-control" placeholder="Degree Name" autocomplete="off" />
                <span id="educationNameError" class="text-danger"></span>
            </div>

            <div class="form-outline mb-4">
                <label class="form-label" for="isEducationActive">Degree Active Status</label>
                <input type="checkbox" id="isEducationActive" />
            </div>
            <input type="hidden" id="educationId" />
            <div class="pt-1 mb-5 pb-1">
                <button id="educationMasterSubmitBtn" class="btn btn-primary mb-3" type="button">Submit</button>
                <button id="educationMasterCancelBtn" class="btn btn-danger mb-3" type="button">Cancle</button>
            </div>

        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
        <div class="white-box">
            <h3 class="box-title">Education Master List</h3>
            <div id="educationList">
                <partial name="~/Views/Dashboard/_EducationList.cshtml" data="@Model" />
            </div>
        </div>
    </div>
</div>

