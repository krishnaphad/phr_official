@using PHR.ViewModels.Dashboard
@model PHR.Services.CommonFunctions.PagedList<KeySkillMasterViewModel>
@{
    ViewData["Title"] = "Key Skill Master";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<button id="keySkillMasterAddBtn" class="btn btn-primary mb-3" type="button"><i class="fa fa-plus"></i>Add New Skill</button>

<div class="row justify-content-center">
    <div class="col-lg-4 col-md-12">
        <form id="keySkillMasterForm">

            <div class="form-outline mb-4">
                <label class="form-label" for="keySkillName">Key Skill Name</label>
                <input type="text" id="keySkillName" class="form-control" placeholder="Key Skill Name" autocomplete="off" />
                <span id="keySkillNameError" class="text-danger"></span>
            </div>

            <div class="form-outline mb-4">
                <label class="form-label" for="isKeySkillActive">Key Skill Active Status</label>
                <input type="checkbox" id="isKeySkillActive" />
            </div>
            <input type="hidden" id="keySkillId" />
            <div class="pt-1 mb-5 pb-1">
                <button id="keySkillMasterSubmitBtn" class="btn btn-primary mb-3" type="button">Submit</button>
                <button id="keySkillMasterCancelBtn" class="btn btn-danger mb-3" type="button">Cancle</button>
            </div>

        </form>
    </div>
</div>

<div class="row">
    <div class="col-md-12 col-lg-12 col-sm-12 col-xs-12">
        <div class="white-box">
            <h3 class="box-title">Key Skill Master List</h3>
            <div id="keySkillList">
                <partial name="~/Views/Dashboard/_KeySkillList.cshtml" data="@Model" />
            </div>
        </div>
    </div>
</div>

